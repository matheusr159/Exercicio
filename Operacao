package exeroperacoes;

import java.util.Scanner;

// @author Matheus Ribeiro

public class Operacao {
    
    int resposta = 0;
    int n1 = 0;
    int n2 = 0;
    
    Scanner ler = new Scanner(System.in);
    
    void soma(){
        
        System.out.println("SOMA");
        System.out.println("Digite o primeiro numero:");
        n1 = ler.nextInt();
        System.out.println("Digite o segundo numero:");
        n2 = ler.nextInt();
        System.out.println("Resposta:" + (n1+n2));
    }
    
    void subtracao(){
        
        System.out.println("SUBTRAÇÃO");
        System.out.println("Digite o primeiro numero:");
        n1 = ler.nextInt();
        System.out.println("Digite o segundo numero:");
        n2 = ler.nextInt();
        System.out.println("Resposta:" + (n1 - n2));
    }
    
    void multiplicacao(){
        
        System.out.println("MULTIPLICAÇÃO");
        System.out.println("Digite o primeiro numero:");
        n1 = ler.nextInt();
        System.out.println("Digite o segundo numero:");
        n2 = ler.nextInt();
        System.out.println("Resposta:" + (n1*n2));
    }	 	  	  		  	    	     	   	     	        	 	
    
    void divisao(){
        
        System.out.println("DIVISAO");
        System.out.println("Digite o primeiro numero:");
        n1 = ler.nextInt();
        System.out.println("Digite o segundo numero:");
        n2 = ler.nextInt();
        System.out.println("Resposta:" + (n1/n2));
    }
    
    void mediaPonderada(double n1, double n2, double p1, double p2){
        System.out.println("Resposta:" + (n1*p1) + (n2*p2) / (p1+p2));
    }
    
    void factorial(int a){
        
        int aux = 1;
        int res = 1;
        
        while(aux <= a){
            r = r * aux;
            cont++;
        }
        System.out.println("Resposta:" + res);
    }
}	 	  	  		  	    	     	   	     	        	 	
